
<header class="plumtree-logo">
    plumtree
</header>


<header class="parent-header-text">
    Keep your plums in check!
</header>

<header class="child-header-text">
    the online inventory list—here to keep your sales in order.
    <br>
    keep a memory of your sales now, so you don't have to later.
</header>

<a href="/adverts/new"><input type="button" class="create-advert" value="Get started now..."/></a>


<div class="page-layout-container">

    <div class="post-section">
    </div>


    <br><br>

    <div class="categories-section">
        <div class="categories-container">
            <div class="cat-item-1" href="#"><a href="/adverts"><div class="category-all">ALL</div></a></div>
            <div class="cat-item-2" href="#"><a href="/technology"><div class="category-tech">TECHNOLOGY</div></a></div>
            <div class="cat-item-3" href="#"><a href="/fashion"><div class="category-clothing">CLOTHING</div></a></div>
            <div class="cat-item-4" href="#"><a href="/misc"><div class="category-misc">MISCELLANEOUS</div></a></div>
            <div class="cat-item-5" href="#"><a href="/adverts/new"><div class="category-post">POST</div></a></div>
            <!-- SORT -->
            <div class="cat-item-6">

                <div class="category-sort">
                    <div class="sort-item-left">
                        <!-- - SORT BY COST/DATE START --->
                        <input type="checkbox" id="click-sort">
                        <label for="click-sort">

                            <div class="sort-left">
                                <div class="sort-container-cost">
                                    <a href="/adverts/sorted-by-price-asc"><img class="sort-up" src="/images/up-icon.svg"/></a>
                                    <div class="sort-cost">COST</div>
                                    <a href="/adverts/sorted-by-price-desc"><img class="sort-down" src="/images/down-icon.svg"/></a>
                                </div>
                            </div>

                            <div class="sort-middle">
                                <img class="sort-sort-up" src="/images/up-icon.svg"/>
                                <div class="sort-sort">SORT</div>
                                <img class="sort-sort-down" src="/images/down-icon.svg"/>
                            </div>

                            <div class="sort-right">
                                <div class="sort-container-date">
                                    <a href="/adverts/sorted-by-time-asc"><img class="sort-up" src="/images/up-icon.svg"/></a>
                                    <div class="sort-date">DATE</div>
                                    <a href="/adverts/sorted-by-time-desc"><img class="sort-down" src="/images/down-icon.svg"/></a>
                                </div>
                            </div>
                        </label>
                    </div>
                    <!--- SORT BY COST/DATE END - -->
                </div>
            </div>

            <div class="cat-item-7" href="#"><a href="/transport"><div class="category-transport">TRANSPORT</div></a></div>
            <div class="cat-item-8" href="#"><a href="/kitchen"><div class="category-kitchen">KITCHEN</div></a></div>
            <div class="cat-item-9" href="#"><a href="/house"><div class="category-house">HOUSE</div></a></div>
            <div class="cat-item-10" href="#"><a href="/sold"><div class="category-sold">SOLD</div></a></div>
            <!-- SEARCH -->
            <div class="cat-item-11">
                <div class="category-search">
                    <div id="search-container">
                        <input class="input-box" type="text" textarea name="text-area" placeholder="search away..."></textarea><span></span>
                        <input type=image class="submit" src="/images/search-icon.svg">
                    </div>
                </div>
            </div>
            <!-- SORT -->
            <div class="cat-item-12"><div class="category-sort"></div></div>
        </div>
    </div>



    <div class="sort-section">
        <div class="sort-post-container">

        </div>

    </div>



    <div class="adverts-section">
        <div class="adverts-container">

            #foreach($advert in $sortedAdvertsByTime)
            <a href="/adverts/$advert.getId()">
                <div class="advertcontainer">
                    <img src="$advert.getImagePath()" class="advertimage">

                    <div class="advert-info-container">
                        <div class="advert-category">
                            #foreach($category in $advert.giveValuesOfAllCategories())
                            $category.toUpperCase()
                            #end
                        </div>
                        <div class="adverttitle">$advert.getTitle()</div>
                        <div class="advertprice">£ $advert.getPrice()</div>
                    </div>
                    <div class="overlay-container">
                        <div class="overlay-child">
                            <img src="/images/zoom-in.svg" style="width:60px;"></div>
                    </div>
                </div>
            </a>
            #end


        </div>
    </div>

</div>